<Page
    x:Class="App2.GamePage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="10,0,-200,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="159*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="132*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnPlayer" Content="Work for Week" HorizontalAlignment="Left" Margin="0,153,0,0" VerticalAlignment="Top" Click="btnPlayer_Click" RenderTransformOrigin="-0.627,-0.312" Width="360" FontWeight="Bold" Background="#FF00B4FF" BorderBrush="#FF0A0808"/>
        <TextBox x:Name="txtScore" HorizontalAlignment="Left" Margin="0,75,0,0" TextWrapping="Wrap" Text="€   0" VerticalAlignment="Top" Width="178" IsReadOnly="True" Background="#FFA89B9B" BorderBrush="#FF4F3434" Foreground="#FF041125" FontSize="17.333" FontWeight="Bold"/>
        <Button x:Name="btnWorker" Content="Office Worker" HorizontalAlignment="Left" Margin="0,266,0,0" VerticalAlignment="Top" Click="btnWorker_Click" RenderTransformOrigin="-0.627,-0.312" Width="113" FontWeight="Bold" Background="#FFEA6033" FontSize="14" Height="32"/>
        <Button x:Name="btnManager" Content="Manager " HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Click="btnManager_Click" RenderTransformOrigin="-0.627,-0.312" Width="113" FontWeight="Bold" Background="#FF20B932" Grid.Row="1"/>
        <Button x:Name="btnBoss" Content="Boss" HorizontalAlignment="Left" Margin="0,16,0,0" VerticalAlignment="Top" Click="btnBoss_Click" RenderTransformOrigin="-0.627,-0.312" FontWeight="Bold" Background="#FFA543C1" Width="113" Grid.Row="2"/>
        <Button x:Name="btnSupervisor" Content="Supervisor" HorizontalAlignment="Left" Margin="0,296,0,0" VerticalAlignment="Top" Click="btnSupervisor_Click" RenderTransformOrigin="-0.627,-0.312" Width="113" FontWeight="Bold" Background="#FFD8EA25" Grid.RowSpan="2"/>
        <TextBox x:Name="txtScorePerClick" HorizontalAlignment="Left" Margin="0,112,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="84" IsReadOnly="True" Background="#FFA89B9B" BorderBrush="#FF4F3434" Foreground="#FF041125" Height="21" />
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="183,78,0,0" TextWrapping="Wrap" Text="Total Capital" VerticalAlignment="Top" Height="32" Width="114" FontSize="17.333" FontWeight="Bold"/>
        <TextBlock x:Name="textBlock1_Copy" HorizontalAlignment="Left" Margin="90,116,0,0" TextWrapping="Wrap" Text="Money per Click" VerticalAlignment="Top" Height="32" Width="126" FontSize="15.333" FontWeight="Bold"/>
        <TextBox x:Name="txtCostForWorker" HorizontalAlignment="Left" Margin="132,266,0,0" TextWrapping="Wrap" Text="50" VerticalAlignment="Top" Width="84" IsReadOnly="True" Background="#FFA89B9B" BorderBrush="#FF4F3434" Foreground="#FF041125" Height="21" />
        <TextBox x:Name="txtCostForSupervisor" HorizontalAlignment="Left" Margin="132,298,0,0" TextWrapping="Wrap" Text="150" VerticalAlignment="Top" Width="84" IsReadOnly="True" Background="#FFA89B9B" BorderBrush="#FF4F3434" Foreground="#FF041125" Height="21" Grid.RowSpan="2" />
        <TextBox x:Name="txtCostForManager" HorizontalAlignment="Left" Margin="132,9,0,0" TextWrapping="Wrap" Text="500" VerticalAlignment="Top" Width="84" IsReadOnly="True" Background="#FFA89B9B" BorderBrush="#FF4F3434" Foreground="#FF041125" Height="21" Grid.Row="1" />
        <TextBox x:Name="txtCostForBoss" HorizontalAlignment="Left" Margin="132,13,0,0" TextWrapping="Wrap" Text="1000" VerticalAlignment="Top" Width="84" IsReadOnly="True" Background="#FFA89B9B" BorderBrush="#FF4F3434" Foreground="#FF041125" Height="21" Grid.Row="2" />
        <TextBlock x:Name="textBlock1_Copy1" HorizontalAlignment="Left" Margin="232,249,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="80" FontSize="12" FontWeight="Bold">
    		<Run Text="Employee List"/>
    		<LineBreak/>
    		<Run/>
        </TextBlock>
        <TextBox x:Name="txtNoOfSupervisors" HorizontalAlignment="Left" Margin="228,299,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="84" IsReadOnly="True" Background="#FFA89B9B" BorderBrush="#FF4F3434" Foreground="#FF041125" Height="21" Grid.RowSpan="2"  />
        <TextBox x:Name="txtNoOfManagers" HorizontalAlignment="Left" Margin="228,10,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="84" IsReadOnly="True" Background="#FFA89B9B" BorderBrush="#FF4F3434" Foreground="#FF041125" Height="21" Grid.Row="1"  />
        <TextBox x:Name="txtNoOfBosses" HorizontalAlignment="Left" Margin="228,16,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="84" IsReadOnly="True" Background="#FFA89B9B" BorderBrush="#FF4F3434" Foreground="#FF041125" Height="21" Grid.Row="2"  />
        <Button x:Name="btnNavHomePage" Content="Home Page" HorizontalAlignment="Left" Margin="0,155,0,0" VerticalAlignment="Top" Height="59" Width="113" Background="#33020EFD" Click="btnNavGamePage1_Click" FontSize="18" BorderBrush="#FF2B2222" Grid.Row="2"/>
        <TextBox x:Name="txtNoOfWorkers" HorizontalAlignment="Left" Margin="228,266,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="84" IsReadOnly="True" Background="#FFA89B9B" BorderBrush="#FF4F3434" Foreground="#FF041125" Height="21" RenderTransformOrigin="0.567,-1.062"  />
        <Button x:Name="btnRelocateWorker" Content="Sell&#xD;&#xA;" HorizontalAlignment="Left" Margin="340,266,0,0" VerticalAlignment="Top" Click="btnRelocateWorker_Click" RenderTransformOrigin="-0.627,-0.312" Width="84" FontWeight="Bold" Background="#FFEA6033" Height="32"/>
        <Button x:Name="btnRelocateSupervisor" Content="Sell&#xA;" HorizontalAlignment="Left" Margin="340,298,0,0" VerticalAlignment="Top" Click="btnRelocateSupervisor_Click" RenderTransformOrigin="-0.627,-0.312" Width="84" FontWeight="Bold" Background="#FFEA6033" Height="33" Grid.RowSpan="2"/>
        <Button x:Name="btnRelocateManager" Content="Sell&#xA;" HorizontalAlignment="Left" Margin="340,10,0,0" VerticalAlignment="Top" Click="btnRelocateManager_Click" RenderTransformOrigin="-0.627,-0.312" Width="84" FontWeight="Bold" Background="#FFEA6033" Height="32" Grid.Row="1"/>
        <Button x:Name="btnRelocateBoss" Content="Sell&#xA;" HorizontalAlignment="Left" Margin="340,16,0,0" VerticalAlignment="Top" Click="btnRelocateBoss_Click" RenderTransformOrigin="-0.627,-0.312" Width="84" FontWeight="Bold" Background="#FFEA6033" Height="32" Grid.Row="2"/>
        <TextBlock x:Name="textBlock1_Copy2" HorizontalAlignment="Left" Margin="136,249,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="80" FontSize="12" FontWeight="Bold" Text="Cost to Hire"/>
        <Button x:Name="btnSupplier" Content="Supplier" HorizontalAlignment="Left" Margin="0,42,0,0" VerticalAlignment="Top" Click="btnSupplier_Click" RenderTransformOrigin="-0.627,-0.312" FontWeight="Bold" Background="#FF2ECFDA" Width="113" Grid.Row="1" Grid.RowSpan="2"/>
        <TextBox x:Name="txtCostPerSupplier" HorizontalAlignment="Left" Margin="132,39,0,0" TextWrapping="Wrap" Text="1000" VerticalAlignment="Top" Width="84" IsReadOnly="True" Background="#FFA89B9B" BorderBrush="#FF4F3434" Foreground="#FF041125" Height="21" Grid.Row="1" Grid.RowSpan="2" />
        <TextBox x:Name="txtNoOfSuppliers" HorizontalAlignment="Left" Margin="228,42,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="84" IsReadOnly="True" Background="#FFA89B9B" BorderBrush="#FF4F3434" Foreground="#FF041125" Height="21" Grid.Row="1" Grid.RowSpan="2"  />
        <Button x:Name="btnRelocateSuppliers" Content="Sell&#xA;" HorizontalAlignment="Left" Margin="340,42,0,0" VerticalAlignment="Top" Click="btnRelocateSupplies_Click" RenderTransformOrigin="-0.627,-0.312" Width="84" FontWeight="Bold" Background="#FFEA6033" Height="32" Grid.Row="1" Grid.RowSpan="2"/>
        <TextBox x:Name="txtTotalNoOfEmployees" HorizontalAlignment="Left" Margin="228,93,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="132" IsReadOnly="True" Background="Black" BorderBrush="#FF4F3434" Foreground="#FF041125" Height="21" BorderThickness="3,2,2,2" Grid.Row="2"  />
    </Grid>
</Page>
